<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hqjy.transfer.crm.modules.sys.dao.SysClassDao">
  
  <!-- 实体映射 -->
  <resultMap id="BaseResultMap" type="com.hqjy.transfer.crm.modules.sys.model.entity.SysClassEntity">
    <id column="class_id" jdbcType="BIGINT" property="classId" />
    <result column="class_name" jdbcType="VARCHAR" property="className" />
    <result column="start_time"  property="startTime" />
    <result column="stop_time"  property="stopTime" />
    <result column="create_id" jdbcType="BIGINT" property="createId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="update_id" jdbcType="BIGINT" property="updateId" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
  </resultMap>
  
  <!-- 表基本列 -->
  <sql id="Base_Column_List">
    class_id, class_name, start_time, stop_time, create_id, create_time,
    update_id, update_time
  </sql>
  
  <!-- 通用查询sql -->
  <sql id="Base_Where_SQL">
    <where>
		<if test="className != null and !&quot;&quot;.equals(className)">and class_name = #{className}</if>
		<if test="startTime != null and !&quot;&quot;.equals(startTime)">and start_time = #{startTime}</if>
		<if test="stopTime != null and !&quot;&quot;.equals(stopTime)">and stop_time = #{stopTime}</if>
		<if test="createId != null and !&quot;&quot;.equals(createId)">and create_id = #{createId}</if>
		<if test="createTime != null and !&quot;&quot;.equals(createTime)">and DATE_FORMAT(create_time,'%Y-%m-%d') = STR_TO_DATE(#{createTime},'%Y-%m-%d')</if>
		<if test="updateId != null and !&quot;&quot;.equals(updateId)">and update_id = #{updateId}</if>
		<if test="updateTime != null and !&quot;&quot;.equals(updateTime)">and DATE_FORMAT(update_time,'%Y-%m-%d') = STR_TO_DATE(#{updateTime},'%Y-%m-%d')</if>
	</where>
  </sql>
  
  <!-- 插入一条记录 -->
  <insert id="save" keyProperty="classId" useGeneratedKeys="true">
    insert into sys_class
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="null != className">class_name, </if>
			<if test="null != startTime">start_time, </if>
			<if test="null != stopTime">stop_time, </if>
			<if test="null != createId">create_id, </if>
			<if test="null != createTime">create_time, </if>
			<if test="null != updateId">update_id, </if>
			<if test="null != updateTime">update_time, </if>
		</trim>
	values
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="null != className">#{className}, </if>
			<if test="null != startTime">#{startTime}, </if>
			<if test="null != stopTime">#{stopTime}, </if>
			<if test="null != createId">#{createId}, </if>
			<if test="null != createTime">#{createTime}, </if>
			<if test="null != updateId">#{updateId}, </if>
			<if test="null != updateTime">#{updateTime}, </if>
		</trim>
  </insert>
  
  <!-- 更新一条记录 -->
  <update id="update">
    update sys_class 
		<set>
			<if test="null != className">class_name = #{className}, </if>
			<if test="null != startTime">start_time = #{startTime}, </if>
			<if test="null != stopTime">stop_time = #{stopTime}, </if>
			<if test="null != createId">create_id = #{createId}, </if>
			<if test="null != createTime">create_time = #{createTime}, </if>
			<if test="null != updateId">update_id = #{updateId}, </if>
			<if test="null != updateTime">update_time = #{updateTime}, </if>
		</set>
		where class_id = #{classId}
  </update>
  
  <!-- 删除给定主键的记录 -->
  <delete id="delete">
    delete
		from sys_class
	where
		class_id = #{classId}
  </delete>
  
  <!-- 多个主键批量删除记录 -->
  <delete id="deleteBatch">
    delete
		from sys_class
	where
		class_id in 
		<foreach collection="array" index="index" item="item" open="(" separator="," close=")">
			#{item}
		</foreach>
  </delete>
  
  <!-- 多个实体批量删除记录 -->
  <delete id="deleteList">
    delete
		from sys_class
	where
		class_id in 
		<foreach collection="list" index="index" item="item" open="(" separator="," close=")">
			#{item.classId}
		</foreach>
  </delete>
  
  <!-- 主键查找一条记录 -->
  <select id="findOne" resultMap="BaseResultMap">
    select
		<include refid="Base_Column_List" />
	from sys_class
	where class_id = #{classId}
  </select>
  
  <!-- 查询多条 -->
  <select id="findList" resultMap="BaseResultMap">
    select
		<include refid="Base_Column_List" />
	from sys_class
		<include refid="Base_Where_SQL" />
  </select>
  
  <!-- 分页查询 -->
  <select id="findPage" resultMap="BaseResultMap">
    select
		<include refid="Base_Column_List" />
	from sys_class
		<where>
		<if test="className != null and !&quot;&quot;.equals(className)">and class_name like concat('%',#{className},'%')</if>
		<if test="startTime != null and !&quot;&quot;.equals(startTime)">and start_time = #{startTime}</if>
		<if test="stopTime != null and !&quot;&quot;.equals(stopTime)">and stop_time = #{stopTime}</if>
		<if test="createId != null and !&quot;&quot;.equals(createId)">and create_id = #{createId}</if>
		<if test="createTime != null and !&quot;&quot;.equals(createTime)">and DATE_FORMAT(create_time,'%Y-%m-%d') = STR_TO_DATE(#{createTime},'%Y-%m-%d')</if>
		<if test="updateId != null and !&quot;&quot;.equals(updateId)">and update_id = #{updateId}</if>
		<if test="updateTime != null and !&quot;&quot;.equals(updateTime)">and DATE_FORMAT(update_time,'%Y-%m-%d') = STR_TO_DATE(#{updateTime},'%Y-%m-%d')</if>
	</where>
  </select>
  
  <!-- 查询记录数量 -->
  <select id="count" resultType="int">
    select
		count(*)
	from sys_class
		<include refid="Base_Where_SQL" />
  </select>
  
  <!-- 查询记录是否存在 -->
  <select id="exsit" resultType="boolean">
    select
		count(*)
	from sys_class
		<include refid="Base_Where_SQL" />
  </select>

    <select id="getClassComboBox" resultMap="BaseResultMap">
        select class_id,class_name,start_time,stop_time from sys_class
    </select>


	<select id="findClassByName" resultMap="BaseResultMap">
        select class_id,class_name,start_time,stop_time from sys_class
        where class_name=#{className}
        <if test="classId!=null and !&quot;&quot;.equals(classId)">
			and class_id != #{classId}
		</if>
    </select>

</mapper>