<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hqjy.transfer.crm.modules.sys.dao.SysUserRoleDao">

    <!-- 实体映射 -->
    <resultMap id="BaseResultMap" type="com.hqjy.transfer.crm.modules.sys.model.entity.SysUserRoleEntity">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="user_id" jdbcType="BIGINT" property="userId"/>
        <result column="role_id" jdbcType="BIGINT" property="roleId"/>
        <result column="create_id" jdbcType="BIGINT" property="createId"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>

    <!-- 表基本列 -->
    <sql id="Base_Column_List">
        id, user_id, role_id, create_id, create_time
    </sql>

    <!-- 通用查询sql -->
    <sql id="Base_Where_SQL">
        <where>
            <if test="id != null and !&quot;&quot;.equals(id)">and id = #{id}</if>
            <if test="userId != null and !&quot;&quot;.equals(userId)">and user_id = #{userId}</if>
            <if test="roleId != null and !&quot;&quot;.equals(roleId)">and role_id = #{roleId}</if>
            <if test="createId != null and !&quot;&quot;.equals(createId)">and create_id = #{createId}</if>
            <if test="createTime != null and !&quot;&quot;.equals(createTime)">and DATE_FORMAT(create_time,'%Y-%m-%d') = STR_TO_DATE(#{createTime},'%Y-%m-%d')</if>
        </where>
    </sql>

    <!--  根绝角色编号查询用户编号列表 -->
    <select id="findUserIdByRoleId" resultType="long">
        select user_id
        from sys_user_role
        where role_id = #{roleId}
    </select>

    <!-- 根据用户ID，获取角色ID列表 -->
    <select id="findRoleIdList" resultType="Long">
        SELECT sr.role_id
        FROM sys_user_role sur
            LEFT JOIN sys_role sr ON sr.role_id = sur.role_id
        WHERE sur.user_id = #{userId} AND sr.status = 0
    </select>

    <!-- 根据用户ID，获取角色列表 -->
    <select id="findRoleList" resultType="com.hqjy.transfer.crm.modules.sys.model.entity.SysRoleEntity">
        SELECT
            sr.role_id,
            sr.role_name
        FROM sys_user_role sur
            LEFT JOIN sys_role sr ON sr.role_id = sur.role_id
        WHERE sur.user_id = #{userId}
    </select>

    <!-- 删除用户角色关系 -->
    <delete id="deleteByUserId">
        DELETE
        FROM sys_user_role
        WHERE
            user_id = #{userId}
    </delete>

    <!-- 插入一条记录 -->
    <insert id="save" keyProperty="id" useGeneratedKeys="true">
        insert into sys_user_role(user_id, role_id, create_id)
        values
        <foreach collection="roleIdList" item="item" index="index" separator=",">
            (
            #{userId},
            #{item},
            #{createId}
            )
        </foreach>
    </insert>

    <!-- 更新一条记录 -->
    <update id="update">
        update sys_user_role
        <set>
            <if test="null != id">id = #{id},</if>
            <if test="null != userId">user_id = #{userId},</if>
            <if test="null != roleId">role_id = #{roleId},</if>
            <if test="null != createId">create_id = #{createId},</if>
            <if test="null != createTime">create_time = #{createTime},</if>
        </set>
        where id = #{id}
    </update>

    <!-- 删除给定主键的记录 -->
    <delete id="delete">
        DELETE
        FROM sys_user_role
        WHERE
            id = #{id}
    </delete>

    <!-- 多个主键批量删除记录 -->
    <delete id="deleteBatch">
        delete
        from sys_user_role
        where
        id in
        <foreach collection="array" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>

    <!-- 多个实体批量删除记录 -->
    <delete id="deleteList">
        delete
        from sys_user_role
        where
        id in
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
            #{item.id}
        </foreach>
    </delete>

    <!-- 主键查找一条记录 -->
    <select id="findOne" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_user_role
        where id = #{id}
    </select>

    <!-- 查询多条 -->
    <select id="findList" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_user_role
        <include refid="Base_Where_SQL"/>
    </select>

    <!-- 分页查询 -->
    <select id="findPage" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_user_role
        <where>
            <if test="id != null and !&quot;&quot;.equals(id)">and id = #{id}</if>
            <if test="userId != null and !&quot;&quot;.equals(userId)">and user_id = #{userId}</if>
            <if test="roleId != null and !&quot;&quot;.equals(roleId)">and role_id = #{roleId}</if>
            <if test="createId != null and !&quot;&quot;.equals(createId)">and create_id = #{createId}</if>
            <if test="createTime != null and !&quot;&quot;.equals(createTime)">and DATE_FORMAT(create_time,'%Y-%m-%d') = STR_TO_DATE(#{createTime},'%Y-%m-%d')</if>
        </where>
    </select>

    <!-- 查询记录数量 -->
    <select id="count" resultType="int">
        select
        count(*)
        from sys_user_role
        <include refid="Base_Where_SQL"/>
    </select>

    <!-- 查询记录是否存在 -->
    <select id="exsit" resultType="boolean">
        select
        count(*)
        from sys_user_role
        <include refid="Base_Where_SQL"/>
    </select>


</mapper>